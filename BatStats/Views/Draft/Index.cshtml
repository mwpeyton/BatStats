@{
    ViewBag.Title = "Draft Picks";
}

@using BatStats.Models

<div id="picks-title"><h1>Draft Picks</h1></div>

<table class="picks-grid">
    <tr>
        <th>Position</th>
        <th>Player</th>
        <th>Team</th>
    </tr>
    @foreach (var item in Model.Picks)
    {
        <tr>
            <td>@item.Position</td>
            <td>@item.PlayerName</td>
            <td>@item.TeamName</td>
            <td>
                @using (Html.BeginForm("DeleteDraftEntry", "Draft", new { playerName = item.PlayerName }, FormMethod.Post))
                {
                    <button class="btn btn-inverse" title="Delete" type="submit">Delete</button>
                }
            </td>
        </tr>
    }
</table>

<a href="@Url.Action("Index", "Home")">
    <button class="btn btn-inverse" title="Back to Players" type="submit"> Back to Players</button>
</a>
   


